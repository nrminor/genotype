{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "quoteProps": "preserve",
  "jsxSingleQuote": false,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "endOfLine": "lf",
  "objectWrap": "preserve",
  "insertFinalNewline": true,
  "embeddedLanguageFormatting": "off",
  "ignorePatterns": [
    "docs/",
    "dist/",
    "**/dist/",
    "**/*.d.ts",
    "**/node_modules/",
    "test/fixtures/",
    "src/native/",
    "reports/**/*",
    "**/*.backup*",
    "**/backup*/**/*",
  ],
}
